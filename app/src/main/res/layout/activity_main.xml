<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="top|start"
    android:background="?android:attr/windowBackground">

    <!-- Lost Mode Status -->
    <TextView
        android:id="@+id/lostModeStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lost_mode_unknown"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingBottom="12dp"
        android:contentDescription="@string/lost_mode_status_desc"/>

    <!-- GPS Status -->
    <TextView
        android:id="@+id/gpsStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/gps_unknown"
        android:textSize="16sp"
        android:paddingBottom="8dp"
        android:contentDescription="@string/gps_status_desc"/>

    <!-- Connection Status -->
    <TextView
        android:id="@+id/connStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/connection_unknown"
        android:textSize="16sp"
        android:paddingBottom="12dp"
        android:contentDescription="@string/connection_status_desc"/>

    <!-- Start Service Button -->
    <Button
        android:id="@+id/btnStartService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_service"
        android:contentDescription="@string/start_service_desc"/>

    <!-- Stop Service Button -->
    <Button
        android:id="@+id/btnStopService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/stop_service"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/stop_service_desc"/>

</LinearLayout>